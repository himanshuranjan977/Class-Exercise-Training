</servlet-mapping>


<servlet>
    <servlet-name>MovieList</servlet-name>
    <servlet-class>com.gl.Servlet.MovieTableServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>MovieList</servlet-name>
