<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">

  <display-name>Learning JSP</display-name>

  <!-- Welcome files -->
  <welcome-file-list>
     <welcome-file>form.jsp</welcome-file>
     <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Configure StudentReadServlet -->
  <servlet>
     <servlet-name>StudentReadServlet</servlet-name>
     <servlet-class>com.gl.Servlet.StudentReadServlet</servlet-class>
  </servlet>

  <servlet-mapping>
     <servlet-name>StudentReadServlet</servlet-name>
     <url-pattern>/student-read</url-pattern>
  </servlet-mapping>
   
   <servlet>
   <servlet-name>productServlet</servlet-name>
   <servlet-class>com.gl.Servlet.productServlet</servlet-class>
</servlet>

<servlet-mapping>
   <servlet-name>productServlet</servlet-name>
   <url-pattern>/product</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>MovieServlet</servlet-name>
    <servlet-class>com.gl.Servlet.MovieServlet</servlet-class>
</servlet>

<servlet-mapping>
